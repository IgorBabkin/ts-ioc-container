{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "graphType": "all"
    },
    "version": {
      "createRelease": "github",
      "conventionalCommits": true,
      "allowBranch": ["master"],
      "message": "chore(release): publish"
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
