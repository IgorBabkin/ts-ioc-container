{
  "testMatch": [
    "**/?(*.)+(spec|test).+(ts)"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsConfig": "./tsconfig.json",
        "isolatedModules": false
      }
    ]
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "cjm/",
    "esm/",
    "typings/",
    "scripts/"
  ],
  "moduleDirectories": [
    "node_modules"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "setupFiles": [
    "<rootDir>/jest.setup.ts"]
}
