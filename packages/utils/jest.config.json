{
  "testMatch": [
    "**/?(*.)+(spec|test).+(ts)"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.json",
        "isolatedModules": false
      }
    ]
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/fixtures/",
    "/cjm/",
    "/esm/"
  ],
  "moduleDirectories": ["node_modules"]
}
