    <style is:inline>
      /* Override Bootstrap primary color with fresh sage green */
      :root {
        --bs-primary: #87a96b;
        --bs-primary-rgb: 135, 169, 107;
      }
      [data-bs-theme="dark"] {
        --bs-primary: #a8c585;
        --bs-primary-rgb: 168, 197, 133;
      }
    </style>
    <!-- Store original Mermaid diagram content before Mermaid processes it -->
    <script is:inline>
      // Store diagram content synchronously before any modules load
      (function() {
        function storeMermaidContent() {
          const diagrams = document.querySelectorAll(".mermaid");
          diagrams.forEach((el) => {
            if (!el.hasAttribute("data-original-content")) {
              const content = el.textContent || el.innerHTML.trim();
              if (content && !el.hasAttribute("data-processed")) {
                el.setAttribute("data-original-content", content);
              }
            }
          });
        }

        // Try to store immediately
        if (document.readyState !== "loading") {
          storeMermaidContent();
        }

        // Also store when DOM is ready
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", storeMermaidContent);
        } else {
          // Use a small delay to catch elements added by Astro
          setTimeout(storeMermaidContent, 0);
        }
      })();
    </script>
    <script type="module" is:inline>
      import mermaid from "https://cdn.jsdelivr.net/npm/mermaid@10.9.5/dist/mermaid.esm.min.mjs";

      // Make mermaid globally accessible
      window.mermaid = mermaid;

      // Get theme from localStorage or system preference
      function getInitialTheme() {
        const stored = localStorage.getItem("theme");
        if (stored) return stored;
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      }

      // Ensure original content is stored before initializing
      function ensureOriginalContentStored() {
        document.querySelectorAll(".mermaid").forEach((el) => {
          if (!el.hasAttribute("data-original-content")) {
            const content = el.textContent || el.innerHTML.trim();
            if (content && !el.hasAttribute("data-processed")) {
              el.setAttribute("data-original-content", content);
            }
          }
        });
      }

      // Wait for DOM to be ready
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => {
          ensureOriginalContentStored();
        });
      } else {
        ensureOriginalContentStored();
      }

      const initialTheme = getInitialTheme();
      mermaid.initialize({
        startOnLoad: true,
        theme: initialTheme === "dark" ? "dark" : "default"
      });
    </script>
    <script is:inline>
      // Prevent flash of wrong theme
      (function() {
        function getInitialTheme() {
          const stored = localStorage.getItem("theme");
          if (stored) return stored;
          return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
        }
        const theme = getInitialTheme();
        document.documentElement.setAttribute("data-bs-theme", theme);
      })();
    </script>
