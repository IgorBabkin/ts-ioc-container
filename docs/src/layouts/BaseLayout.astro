    <script>
      // Sync CodeBlock components with ThemeToggle
      (function () {
        function syncCodeBlocksWithTheme() {
          const codeBlocks = document.querySelectorAll("[data-code-block-id]");
          codeBlocks.forEach((container) => {
            // If no explicit theme is set, ensure it's "auto" to follow page theme
            if (!container.getAttribute("data-code-theme")) {
              container.setAttribute("data-code-theme", "auto");
            }
          });
        }

        // Initialize immediately if DOM is ready
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", syncCodeBlocksWithTheme);
        } else {
          syncCodeBlocksWithTheme();
        }

        // Also sync for dynamically added content
        if (typeof window !== "undefined") {
          const observer = new MutationObserver(syncCodeBlocksWithTheme);
          observer.observe(document.body, { childList: true, subtree: true });
        }
      })();
