{
  "testMatch": [
    "**/?(*.)+(spec|test).+(ts)"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.json",
        "isolatedModules": false
      }
    ]
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "cjm/",
    "esm/",
    "typings/",
    "scripts/",
    "__tests__"
  ],
  "moduleDirectories": [
    "node_modules"
  ],
  "setupFiles": ["<rootDir>/jest.setup.ts"]
}
