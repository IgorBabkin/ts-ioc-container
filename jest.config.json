{
  "testMatch": [
    "**/?(*.)+(spec|test).+(ts)"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.json",
        "isolatedModules": false
      }
    ]
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/",
    "/lib/container/AutoMockedContainer.ts",
    "cjm/",
    "esm/",
    "typings/",
    "scripts/"
  ],
  "moduleDirectories": [
    "node_modules"
  ],
  "setupFiles": ["<rootDir>/jest.setup.ts"]
}
